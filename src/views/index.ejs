<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
  
</head>
<body class="container">

<header>
  <%- include('partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Image Resizer</h1>
    <p>Image Processing API</p>
  </div>

  <% if ( images.length > 0 ) { %>
    <div id="image-container">
      <p>Resize Images using the below link</p>
      <p class='example'>http://localhost:5000/resize?w=500&h=400</p>
      <% images.forEach((img) => { %>
        <img class='sized-image' src="public/images/<%= img %>">
      <% }); %>
    </div>
  <% } else { %>
    <div class='noParams'>
      <h3>Sorry!</h3>
      <p>No Images to display</p>
      </p>
      <p class='example'>http://localhost:5000/resize?w=500&h=400</p>
    </div>
    
  <% } %>

  
</main>

<footer>
  <%- include('partials/footer'); %>
</footer>

</body>
</html>